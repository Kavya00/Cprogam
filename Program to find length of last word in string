#include <stdio.h>
#include <string.h>

int main() {
    char input[1000];
    printf("Enter a string: ");
    fgets(input, sizeof(input), stdin);

    if (input[strlen(input) - 1] == '\n') {
        input[strlen(input) - 1] = '\0';
    }

    int length = 0;
    int i = strlen(input) - 1;

    while (i >= 0 && input[i] == ' ') {
        i--;
    }

    while (i >= 0 && input[i] != ' ') {
        length++;
        i--;
    }

    printf("Length of the last word: %d\n", length);

    return 0;
}
